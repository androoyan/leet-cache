{
  "compilerOptions": {
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "target": "es6",
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist", "node_modules"]
}
